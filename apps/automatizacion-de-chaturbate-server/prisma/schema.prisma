datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recaptchas {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  isSuccess Boolean?
  response  String?
  siteKey   String?
  updatedAt DateTime @updatedAt
}

model Proxies {
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  ipAddress     String?
  port          String?
  proxyAddress  String?
  proxyLogin    String?
  proxyPassword String?
  proxyPort     Int?
  proxyType     String?
  updatedAt     DateTime @updatedAt
}

model Streams {
  commentsItems Comments[]
  createdAt     DateTime   @default(now())
  id            String     @id @default(cuid())
  likesItems    Likes[]
  streamKey     String?
  streamUrl     String?
  updatedAt     DateTime   @updatedAt
}

model SystemConfig {
  createdAt      DateTime @default(now())
  defaultTimeout Int?
  id             String   @id @default(cuid())
  maxUsers       Int?
  updatedAt      DateTime @updatedAt
}

model Likes {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  stream    Streams? @relation(fields: [streamId], references: [id])
  streamId  String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Comments {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  stream    Streams? @relation(fields: [streamId], references: [id])
  streamId  String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  commentsItems Comments[]
  createdAt     DateTime   @default(now())
  dob           DateTime?
  email         String?    @unique
  firstName     String?
  gender        String?
  id            String     @id @default(cuid())
  lastName      String?
  likesItems    Likes[]
  password      String
  roles         Json
  status        Boolean?
  updatedAt     DateTime   @updatedAt
  username      String     @unique
}
